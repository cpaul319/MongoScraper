	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap-grid.css">
	<link rel="stylesheet" href="/public/assets/css/style.css" type="text/css" />
	<title>Mongo Scraper</title>
	


</head>

<body>
	<nav class=" navbar navbar-expand-lg navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<a class="navbar-brand" href="/"><h3>Mongo Scraper for the Columbia Missourian</h3></a>
			</div>
			<div id="navbar" class="navbar">
				<ul class="nav navbar-nav">
					{{!-- <li><a href="/">Home</a></li> --}}
					<li><button type="button" class="btn btn-primary" id="saved"><a href="/saved"></a>Saved
							Articles</a></button></li>
					{{!-- <li><a href="/scrape">Saved Articles</a></li> --}}
					<li><button type="button" class="btn btn-primary" id="scrape">Scrape Articles</button></li>
				</ul>
			</div>
		</div>
	</nav>
	{{{ body }}}
	<script src="/public/assets/js/app.js" type="text/javascript"></script>

<div class="modal" id="modalPostForm" tabindex="-1" role="dialog">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					  <h4 class="modal-title">Notes for {{this.title}}</h4>
					{{!-- <button type="button" class="close" data-dismiss="modal"> --}}
						{{!-- <span aria-hidden="true">&times;</span> --}}
					</button>
				</div>
				<div class="modal-body">
					           {{#if this.notes}}
                    {{#each this.notes}}
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <p class="previousNotes"> {{this.body}}</p>
                                <button type="button" class="btn btn-danger deleteNote" data-note-id={{this._id}} data-article-id={{this.article}}>X</button>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h4>No notes for this article yet.</h4>
                        </div>
                    </div>
                {{/if}}
					<form id="confess-submit">
						<div class="form-group">
							
							<label for="message-text" class="col-form-label">
							 			<textarea class="form-control" id="noteText{{this._id}}" placeholdder="New Note"
								required></textarea>
							</label>
				
						</div>
					 
				</div>

				<div class="modal-footer">
					 <button type="button" class="btn btn-primary saveNote"data-dismiss="modal" data-id={{this._id}}>Save Note</button>
	 
					<button type="button" class="btn btn-basic" data-dismiss="modal">Close</button>
				</div>
				</form>
			</div>
		</div>
	</div>

</body>

</html>