<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> Scraped Articles</h1>
        </div>


        <div class="col-md-12">
            {{#if article}}
            {{#each article}}
            <div class="card">
                <div class="panel-heading">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="panel-body">
                    <a href={{this.link}} target="_blank"><button type="button" class="btn btn-primary">Click for full
                            Story</button></a>
                    <br><br>
                    <button type="button" class="btn btn-primary save" data-id={{this._id}}>Save Article</button>


                </div>
            </div>
            {{/each}}
            {{else}}
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4>There are no scraped articles yet. Hit the scrape articles button to begin</h4>
                </div>
            </div>
            {{/if}}

        </div>
    </div>
</div>

{{#each article}}
{{> modal_notes }}
{{/each}}